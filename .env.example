# Ex Revolution Technology - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3000
API_PORT=5000

# JWT Authentication (Generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Database Configuration
# MongoDB (Primary Database)
MONGODB_URI=mongodb://localhost:27017/exrevolution
DB_NAME=exrevolution

# Admin User Configuration
ADMIN_EMAIL=admin@exrevolution.com
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_NAME=Ex Revolution Admin

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
EMAIL_FROM=admin@exrevolution.com

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Session Settings
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info

# Production Settings (Uncomment for production)
# CORS_ORIGIN=https://exrevolution.com
# SECURE_COOKIES=true
# TRUST_PROXY=true