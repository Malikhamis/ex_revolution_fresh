{
  "name": "ex-revolution-technology",
  "version": "1.0.0",
  "description": "Ex Revolution Technology - Innovative IT Solutions with proxy server for development",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "build.bat",
    "build:ps": "powershell -ExecutionPolicy Bypass -File build.ps1",
    "build:static": "build.bat",
    "build:css": "node scripts/optimize-css.js",
    "build:manifest": "node scripts/generate-manifest.js",
    "serve:static": "cd dist && python -m http.server 8080",
    "preview": "npm run build && npm run serve:static",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "analyze": "webpack-bundle-analyzer dist/js/*.js",
    "clean": "if exist dist rmdir /s /q dist && if exist coverage rmdir /s /q coverage && if exist logs rmdir /s /q logs",
    "precommit": "npm run lint && npm run test",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:dev": "npm run build && echo Ready for development deployment"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "archiver": "^6.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.10.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "netlify-cli": "^17.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!uploads/**",
      "!dist/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "keywords": [
    "website",
    "technology",
    "IT solutions",
    "software development",
    "digital marketing",
    "Tanzania",
    "proxy server"
  ],
  "author": "Ex Revolution Technology",
  "license": "MIT"
}
